<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SlideShowActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_slide_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dots_linear_layout"></androidx.viewpager.widget.ViewPager>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/dots_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:background="@color/lightBackGroundColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaa">
            </Button>
        </LinearLayout>

</RelativeLayout>