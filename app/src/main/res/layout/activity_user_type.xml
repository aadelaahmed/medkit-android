<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.UserTypeActivity">


    <RelativeLayout
        android:id="@+id/doctor_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bordered_button"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:id="@+id/doctor_btn_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:src="@drawable/ic_type_doctor" />

        <TextView
            android:id="@+id/doctor_btn_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/doctor_btn_img"
            android:padding="32dp"
            android:text="I am a Doctor"
            android:textColor="@color/darkGrayText"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Choose type of account!"
        android:textColor="@color/darkGrayText"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/user_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/bordered_button"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/doctor_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/doctor_btn"
        app:layout_constraintTop_toBottomOf="@+id/doctor_btn">

        <ImageView
            android:id="@+id/user_btn_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_type_user" />

        <TextView
            android:id="@+id/user_btn_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/user_btn_img"

            android:paddingStart="37dp"
            android:paddingTop="32dp"
            android:paddingEnd="37dp"
            android:paddingBottom="32dp"
            android:text="I am a User"
            android:textColor="@color/darkGrayText"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>