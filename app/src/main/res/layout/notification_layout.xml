<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_container"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="2dp"
    android:clickable="true"
    android:elevation="0.5dp"
    android:focusable="true">

    <ImageView
        android:id="@+id/notification_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_image"
        android:src="@drawable/ic_type_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="add a new post for diabetes section, tap to
    respond to him"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notification_user_photo"
        app:layout_constraintTop_toTopOf="@+id/notification_user_photo" />
</androidx.constraintlayout.widget.ConstraintLayout>