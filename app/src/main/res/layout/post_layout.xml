<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="0.5dp"
    android:layout_marginBottom="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/post_user_profile_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_type_user" />

    <TextView
        android:id="@+id/post_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Ahmed Medra"
        android:textColor="@color/textActiveColor"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/post_user_profile_picture"
        app:layout_constraintStart_toEndOf="@+id/post_user_profile_picture"
        app:layout_constraintTop_toTopOf="@+id/post_user_profile_picture" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/post_user_name"
        app:layout_constraintEnd_toStartOf="@+id/psot_time_tv"
        app:layout_constraintTop_toTopOf="@+id/post_user_name"
        app:srcCompat="@drawable/ic_watch" />

    <TextView
        android:id="@+id/psot_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="2 min"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_user_profile_picture"
        app:srcCompat="@drawable/ic_donation" />

    <TextView
        android:id="@+id/post_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="I need help for my arm"
        android:textColor="@color/textActiveColor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/post_user_profile_picture"
        app:layout_constraintTop_toBottomOf="@+id/post_image" />

    <TextView
        android:id="@+id/post_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/blue_round_tv"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Diabetes"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/post_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/post_title_tv" />

    <TextView
        android:layout_marginEnd="8dp"
        android:id="@+id/post_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="6dp"
        android:text="Contrary to popular belief, Lorem Ipsum is not simply random  text. It has roots in a piece of classical Latin literature from 45  BC, making it over 2000 years old."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/post_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/post_title_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>