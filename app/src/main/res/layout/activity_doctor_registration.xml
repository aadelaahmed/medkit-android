<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackGroundColor"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".activities.DoctorRegistrationActivity">

    <com.example.medkit.model.CustomViewPager
        android:id="@+id/view_pager_slide_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:isScrollContainer="false"
        android:overScrollMode="never"
        android:paddingBottom="24dp" />

    <LinearLayout
        android:id="@+id/dots_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/slider_skip_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:padding="0dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/darkGrayText"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/dots_linear_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/slider_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/blue_rounded_button"
            android:padding="0dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/lightBackGroundColor"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>